#include <iostream>
#include <fstream>
#include <string>

using namespace std;

ifstream in("input.txt");
ofstream out("output.txt");

void read(int**& matrix, int& n) {
    in >> n;

    matrix = new int* [n];
    for (int i = 0; i < n; ++i) {
        matrix[i] = new int[n];
    }

    for (int i = 0; i < n; ++i) {
        for (int j = 0; j < n; ++j) {
            in >> matrix[i][j];
        }
    }
}

void print(int** matrix, int n) {
    for (int i = 0; i < n; ++i) {
        for (int j = 0; j < n; ++j) {
            out << matrix[i][j] << " ";
        }
        out << endl;
    }
}



int main() {
    int** matrix;
    int n;

    read(matrix, n);
	int i = 0, j = 1;
	for (int k = 0; k < n/2; k++){
		cout << i << ' ' << j << ' ';
    for (i, j; j < n-1 && i < n-1 && i>=0 && j>=0; i++, j--){//îáõîäèì ñ 1 ïî n (äèàãîíàëè ñâåðõó)
    	cout << matrix[i][j] << ' ';
    	cout << '\t' << i << ' ' << j << '\t';
		}
		i = 0;
		j++;
	}
	//âûçûâàåì ñîðòèðîâêó ñ ýëåìåíòàìè ìàññèâà
	cout << '\n';
	
	for(int j = 1, i = 4; j < n-1; j++, i--){//îáõîäèì ñ 1 ïî n (äèàãîíàëè ñíèçó)
    	cout << matrix[i][j] << ' ';
	}
	//âûçûâàåì ñîðòèðîâêó ñ ýëåìåíòàìè ìàññèâà

    print(matrix, n);

    in.close();
    out.close();
    return 0;
}
