#include <iostream>
#include <stack>
#include <string>

// Функция для подсчета слов, начинающихся с заданной буквы, и удаления их из стека
int countAndRemoveWords(std::stack<std::string>& originalStack, char letter) {
    std::stack<std::string> tempStack;
    int count = 0;

    // Перебираем слова в исходном стеке
    while (!originalStack.empty()) {
        std::string word = originalStack.top();
        originalStack.pop();

        // Если слово начинается с заданной буквы, увеличиваем счетчик и не добавляем его во временный стек
        if (word[0] == letter) {
            count++;
        } else {
            // Иначе добавляем слово во временный стек
            tempStack.push(word);
        }
    }

    // Восстанавливаем исходный стек из временного стека
    while (!tempStack.empty()) {
        originalStack.push(tempStack.top());
        tempStack.pop();
    }

    return count;
}

int main() {
    std::stack<std::string> wordsStack;

    // Заполняем стек словами
    wordsStack.push("apple");
    wordsStack.push("banana");
    wordsStack.push("carrot");
    wordsStack.push("dog");
    wordsStack.push("elephant");
    wordsStack.push("fish");

    char letter = 'c'; // Задаем букву

    // Подсчитываем количество слов, начинающихся с заданной буквы, и удаляем их из стека
    int count = countAndRemoveWords(wordsStack, letter);

    std::cout << "Количество слов, начинающихся с буквы '" << letter << "': " << count << std::endl;

    std::cout << "Слова после удаления:" << std::endl;
    // Выводим слова, оставшиеся в стеке
    while (!wordsStack.empty()) {
        std::cout << wordsStack.top() << std::endl;
        wordsStack.pop();
    }

    return 0;
}
